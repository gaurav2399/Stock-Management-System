<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.gaurav.mystockmanager">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_my_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_my_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".activities.ChangePassword">
        </activity>
        <activity android:name=".activities.PasswordActivity">
        </activity>
        <activity android:name=".activities.OrderDetail">
        </activity>
        <activity android:name=".activities.SaleOrder">
        </activity>
        <activity android:name=".activities.PurchaseOrder">
        </activity>
        <activity android:name=".activities.Stock">
        </activity>
        <activity android:name=".activities.SalesEntry">
        </activity>
        <activity android:name=".activities.PurchaseEntry">
        </activity>
        <activity android:name=".activities.AddItem">
        </activity>
        <activity android:name=".activities.MainActivity">
        </activity>
        <activity android:name=".activities.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <meta-data
                android:name="preloaded_fonts"
                android:resource="@array/preloaded_fonts"/>
    </application>

</manifest>