<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
                android:layout_height="118dp"
                android:padding="8dp"
                android:background="#F1F8E9"
                xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                    android:background="@drawable/edit_text_layout"
                    android:padding="10dp"
                    android:layout_height="wrap_content">

        <TextView
                android:text="Item Name"
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:textSize="18sp"
                android:textColor="#575656"
                android:textStyle="bold"
                android:layout_height="wrap_content" android:layout_alignParentStart="true"
                android:layout_marginStart="10dp" android:layout_alignParentLeft="true"

                android:layout_alignParentTop="true" android:id="@+id/itemNameText" android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"/>

        <TextView
                android:text="agarbatti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_alignParentTop="true" android:id="@+id/itemName" android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/itemNameText"
                android:layout_toRightOf="@+id/itemNameText" android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"/>

        <TextView
                android:text="Quantity"
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#575656"
                android:layout_height="wrap_content" android:layout_alignParentStart="true"
                android:layout_marginStart="10dp" android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/itemNameText"
                android:id="@+id/qtyText" android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"/>

        <TextView
                android:text="10 piece"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_alignTop="@+id/itemNameText" android:id="@+id/itemQty" android:layout_marginTop="46dp"
                android:layout_toEndOf="@+id/qtyText"
                android:layout_toRightOf="@+id/qtyText" android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_alignTop="@+id/alert_icon"
                  android:layout_alignParentEnd="true"
                  android:layout_alignParentRight="true"
                  android:layout_marginEnd="18dp"
                  android:layout_marginRight="18dp"
                  android:textSize="14sp"
                  android:id="@+id/alertText"
                  android:text="Shortage"
                  android:visibility="gone"
                  android:textColor="#EB4646"
                  android:layout_marginTop="28dp"/>
        <ImageView
                android:layout_width="30dp"
                android:visibility="gone"
                android:layout_height="30dp" android:src="@drawable/ic_iconfinder_alert"
                android:layout_alignParentRight="true" android:layout_alignParentEnd="true" android:layout_marginEnd="33dp"
                android:id="@+id/alert_icon"
                android:layout_marginRight="40dp" android:layout_marginTop="14dp" android:layout_alignParentTop="true"/>

    </RelativeLayout>

</RelativeLayout>
