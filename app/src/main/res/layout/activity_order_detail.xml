<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1F8E9"
        tools:context=".activities.OrderDetail">

    <include layout="@layout/toolbar"
             android:id="@+id/detail_toolbar" app:layout_constraintEnd_toEndOf="parent"
             tools:layout_editor_absoluteY="0dp" app:layout_constraintStart_toStartOf="parent"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#F1F8E9"
            app:layout_constraintTop_toBottomOf="@+id/detail_toolbar" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/detailItemList"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.68"
    />

</android.support.constraint.ConstraintLayout>