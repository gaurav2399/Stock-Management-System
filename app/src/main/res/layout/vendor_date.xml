<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="wrap_content">

    <TextView
            android:text="Date"
            android:textStyle="bold"
            android:padding="5dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="13dp" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
            android:id="@+id/dateText" android:layout_marginTop="5dp" android:layout_marginLeft="13dp"/>

    <TextView
            android:text="10 Oct, 2019"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/vendorText"
            android:layout_marginStart="55dp" android:id="@+id/date" android:layout_alignTop="@+id/dateText"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="75dp"/>

    <TextView
            android:text="Vendor"
            android:textStyle="bold"
            android:padding="5dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_alignTop="@+id/dateText"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="13dp" android:layout_alignParentLeft="true"
            android:id="@+id/vendorText" android:layout_marginTop="50dp" android:layout_marginLeft="13dp"/>

    <TextView
            android:text="ram"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/vendorText"
            android:layout_marginStart="75dp" android:id="@+id/vendor" android:layout_alignTop="@+id/dateText"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="75dp"/>

    <TextView
            android:text="Cost"
            android:textStyle="bold"
            android:padding="5dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/date"
            android:layout_alignTop="@+id/dateText"
            android:layout_marginStart="50dp"
            android:id="@+id/costText" android:layout_marginTop="50dp" android:layout_marginLeft="50dp"/>

    <TextView
            android:text="1000 rs"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/dateText"
            android:layout_toRightOf="@+id/costText"
            android:layout_marginStart="10dp" android:id="@+id/cost" android:layout_marginTop="56dp"
            android:layout_marginLeft="10dp"/>


</RelativeLayout>