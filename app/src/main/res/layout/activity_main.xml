<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1F8E9"
        tools:context=".activities.MainActivity">

    <include layout="@layout/toolbar"
             android:id="@+id/main_toolbar"/>

    <TextView
            android:text="Add Item"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:padding="12dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:background="@drawable/main_btn_layout"
            android:textColor="#424141"
            tools:layout_editor_absoluteY="72dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="65dp"
            android:id="@+id/addItem"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/main_toolbar"/>

    <TextView
            android:text="Add Purchase Entry"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:padding="12dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:background="@drawable/main_btn_layout"
            android:textColor="#424141"
            tools:layout_editor_absoluteY="72dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="65dp"
            android:id="@+id/addPurchaseEntry"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/addItem"/>

    <TextView
            android:text="Add Sales Entry"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:padding="12dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:background="@drawable/main_btn_layout"
            android:textColor="#424141"
            tools:layout_editor_absoluteY="72dp"
            tools:layout_editor_absoluteX="65dp"
            android:id="@+id/addSalesEntry"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/addPurchaseEntry"/>

    <TextView
            android:text="Purchase Orders"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:padding="12dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/main_btn_layout"
            android:textColor="#424141"
            tools:layout_editor_absoluteY="72dp"
            tools:layout_editor_absoluteX="65dp"
            android:id="@+id/purchaseOrder"
            android:layout_marginTop="35dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/addSalesEntry"/>

    <TextView
            android:text="Sale Orders"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:padding="12dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="16sp"
            android:background="@drawable/main_btn_layout"
            android:textColor="#424141"
            tools:layout_editor_absoluteY="72dp"
            tools:layout_editor_absoluteX="65dp"
            android:id="@+id/saleOrder"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/purchaseOrder"/>

    <TextView
            android:text="Stock"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:padding="12dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/main_btn_layout"
            android:textColor="#424141"
            tools:layout_editor_absoluteY="72dp"
            tools:layout_editor_absoluteX="65dp"
            android:id="@+id/stock"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/saleOrder"
            android:layout_marginBottom="35dp"
            android:layout_centerHorizontal="true"/>

</RelativeLayout>
